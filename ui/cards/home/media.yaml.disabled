                        }
                    }
                    }
                  }},
                {%- endfor %}
            show_empty: false
            card:
              type: custom:swipe-card
              parameters:
                direction: vertical
                autoHeight: true
                height: 80
                effect: cube
                autoplay:
                  delay: 2000
                cubeEffect:
                  - slideShadows: false
