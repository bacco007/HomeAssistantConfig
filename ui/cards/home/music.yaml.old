---
type: vertical-stack
cards:
  - type: custom:bubble-card
    card_type: separator
    name: Music
    icon: mdi:music-box-multiple
    styles: |-
      .bubble-line {
        background: var(--ha-card-background);
        opacity: 1;
        }

  - type: conditional
    conditions:
      - condition: state
        entity: media_player.currently_playing
        state_not: "off"
